<header class="bg-red-700 text-white shadow-md sticky top-0 z-50">
  <div class="max-w-6xl mx-auto px-4 py-4 flex justify-between items-center">
    <!-- Logo / Name -->
    <a href="/squigis-pizza" class="text-2xl font-bold">
      üçï Squigi's Pizza of Griffith
    </a>

    <!-- Desktop Navigation -->
    <nav class="hidden md:flex space-x-6 font-medium text-lg">
      <a href="/squigis-pizza" class="relative group">
        Home
        <span class="absolute left-0 -bottom-1 w-0 h-0.5 bg-yellow-400 transition-all group-hover:w-full"></span>
      </a>
      <a href="/squigis-pizza/menu" class="relative group">
        Menu
        <span class="absolute left-0 -bottom-1 w-0 h-0.5 bg-yellow-400 transition-all group-hover:w-full"></span>
      </a>
      <a href="/squigis-pizza/about" class="relative group">
        About
        <span class="absolute left-0 -bottom-1 w-0 h-0.5 bg-yellow-400 transition-all group-hover:w-full"></span>
      </a>
      <a href="/squigis-pizza/contact" class="relative group">
        Contact
        <span class="absolute left-0 -bottom-1 w-0 h-0.5 bg-yellow-400 transition-all group-hover:w-full"></span>
      </a>
    </nav>

    <!-- Mobile Hamburger -->
    <div class="md:hidden ">
      <button id="menu-toggle" class="focus:outline-none flex flex-col justify-between w-8 h-8 hover:bg-red-500 rounded">
        <span class="block h-1 w-full bg-white rounded"></span>
        <span class="block h-1 w-full bg-white rounded"></span>
        <span class="block h-1 w-full bg-white rounded"></span>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <nav id="mobile-menu" class="max-h-0 overflow-hidden md:hidden bg-red-600 transition-all duration-300">
    <div class="flex flex-col px-4 py-2 space-y-2">
      <a href="/squigis-pizza" class="block py-2 px-2 hover:bg-red-500 rounded">Home</a>
      <a href="/squigis-pizza/menu" class="block py-2 px-2 hover:bg-red-500 rounded">Menu</a>
      <a href="/squigis-pizza/about" class="block py-2 px-2 hover:bg-red-500 rounded">About</a>
      <a href="/squigis-pizza/contact" class="block py-2 px-2 hover:bg-red-500 rounded">Contact</a>
    </div>
  </nav>

  <script type="module">
    const toggle = document.getElementById('menu-toggle');
    const menu = document.getElementById('mobile-menu');

    toggle.addEventListener('click', () => {
      // Just expand/collapse mobile menu
      if (menu.style.maxHeight) {
        menu.style.maxHeight = null;
      } else {
        menu.style.maxHeight = menu.scrollHeight + 'px';
      }
    });
  </script>
</header>
